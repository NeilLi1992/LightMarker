{
  "manifest_version": 2,

  "name": "光线书签",
  "version": "0.1",
  "description": "智能的轻书签",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon48.png" ,
    "default_title": "光线书签",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/jquery.min.js", "js/helper.js","js/model.js", "js/background.js"],
    "persistent": false
  },

   "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Save page"
    },
    "save-pos": {
      "suggested_key": {
        "default": "Ctrl+V",
        "mac": "Command+V"
      },
      "description": "Test storage function"
    },
    "debug": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "This is command remains for debugging"
    }
  },

  "permissions": [
    "http://*/",
    "activeTab",
    "tabs",
    "storage"
  ]
}
